head
	case page
		when 'product'
			title Sản phẩm - Vĩnh Phát
		when 'solution'
			title Giải pháp - Vĩnh Phát
		when 'about'
			title Liên hệ - Vĩnh Phát
		default
			title Vĩnh Phát - Trang chủ

header(class='site-header')
	.container
		.row
			.col-md-9
				h2
					a(href='/') Vĩnh Phát Computer
			.col-md-3
				.input-group.homepage-search
					input(type='text' class='form-control' placeholder='Tên sản phẩm', name='searchMsg', id='searchBox')
					span(class='input-group-btn')
						button(class='btn btn-default' type='button', id='searchBtn') Tìm

nav(class='navbar navbar-default' role='navigation')
	.container
		.navbar-collapse.collapse
			- var menu = {'home': {'href': '/', 'name': 'Trang chủ'}, 'product': {'href': '/products', 'name': 'Sản phẩm'}, 'solution': {'href': '/solution', 'name': 'Giải pháp'}, 'about': {'href': '/about', 'name': 'Liên hệ'}}

			ul(class='nav navbar-nav')
				each val, key in menu
					if (!page && key == 'home')
						li(class='active')
							a(href='#{val.href}') #{val.name}
					else if (page && key == page)
						li(class='active')
							a(href='#{val.href}') #{val.name}
					else
						li
							a(href='#{val.href}') #{val.name}

script(type='text/javascript').
	$(document).ready(function () {
		var search = function () {
			var q = $('input[name="searchMsg"]').val();

			window.location.href = '/products?name=' + q;
		};

		$('#searchBtn').on('click', function () {
			search();
		});

		$('#searchBox').on('keydown', function (e) {
			if (e.which === 13)
				search();
		});
	});