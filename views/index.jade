extends components/layout

block content
	head
		title Home

	.container
		.row
			.col-md-12.banner
				p This is banner | Vinh Phat IT

		.row
			.col-md-12
				ul(class='nav nav-pills')
					li(class='active', role='presentation')
						a(class='home-nav-top' href='javascript:void(0)') Home
					li
						a(href='javascript:void(0)') Products
					li
						a(href='javascript:void(0)') About

		.row
			.col-md-12
				.slider
					h1 This is slider space

		.row
			.search
				.col-md-12
					h1 This is search

		.row.main-contain
			.col-md-3.slide-bar
				ul(class='nav')
					li(class='active')
						a(href='javascript:void(0)') Laptop
					li
						a(href='javascript:void(0)') Desktop
					li
						a(href='javascript:void(0)') Phone

			.col-md-9
				- for (var i = 0; i < 12; i ++)
					.col-md-4
						.panel.panel-primary.no-border
							.panel-heading.product-header
								h3(class='panel-title') Product #{i+1}
							.panel-body
								p Body


		.row
			.col-md-12
				.panel.panel-default
					.panel-body
						h3 footer body
					.panel-footer
						h3 This is footer

