extends ../components/layout

block content
	.container.middle-section
		.row
			.col-md-12.middle-section
				.col-md-6.img-section
					img(class='img-responsive' src='#{product.imageURL}')
				
				.col-md-6.brief-info-section
					h2.product-detail-name #{product.name}
					h4
						b Code: ##{product.code}
					h3
						b Giá: #{product.price} #{product.currency}
					- var status = product.status ? 'Còn hàng' : 'Hết hàng';
					h4 Tình trạng: #{status}
					h4 Bảo hành: #{product.guarentee}
					h4 Khuyến mại: #{product.promotion}
			
			.col-md-12
				div(role='tabpanel')
					ul.nav.nav-tabs(role='tablist')
						li.active(role='presentation')
							a(href='#home', aria-controls='home', role='tab', data-toggle='tab')
								b Chi tiết
					.tab-content
						#home.tab-pane.active(role='tabpanel')
							p #{product.description} 

